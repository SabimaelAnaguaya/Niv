---
import Ham from "./Ham.astro"
import Logo from "./Logo.astro"
---

<header id="header">
  <nav>
    <Logo/>
    <ul id="navmenu">
      <li><a href="/">Inicio</a></li>
      <li><a href="#cursos">Cursos</a></li>
      <li><a href="#acerca">Acerca</a></li>
    </ul>
    <Ham/>
  </nav>
</header>

<style>
  header{
    width: 100%;
    height: 8rem;
    position: fixed;
    top:0;
    transition: all .5s ease;
    background-color: transparent;
    z-index: 99;
  }
  
  nav{
    max-width: 80%;
    margin: 0 auto;
    height: inherit;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  ul{
    position: absolute;
    gap: 3rem;
    background-color: white;
    width: 100%;
    left: -100%;
    top: 0;
    height: 100dvh;
    z-index: 100;
    justify-content: center;
    align-items: center;
    transition: all 0.5s ease-in-out;
    margin-inline: auto;
    display: flex;
    gap: 12 px;
    align-content: center;
    flex-direction: column;
    
    & li{
      text-align: center;
    }

    & a{
      max-width: 200px;
      min-width: 120px;
      padding: 12px 18px;
      font-size: 2rem;
      transition: all 0.75s ease;
      color: black;
    }

    & a:hover{
      background-color: burlywood;
    }
  }

  .show-menu{
    left: 0;
    transition: all 0.5s ease-in-out;
  }


  @media (min-width: 768px) {
    nav ul{
      display: flex;
      flex-direction: row;
      position: relative;
      height: fit-content;
      justify-content: end;
      background-color: none;
      left: 0;
      transition: none;
      gap: 8px;
      background-color:transparent;

      & a{
        color: white;
      }
    }
  }

</style>

<script type="module" src="/src/js/hambutton.js"></script>
<script type="module" src="/src/js/obsHeader.js"></script>