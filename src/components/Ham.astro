<div id="lines">
  <span class="line"></span>
  <span class="line"></span>
  <span class="line"></span>
</div>



<style>  
    #lines{
      height: 40%;
      aspect-ratio: 1;
      display: flex;
      flex-direction:column;
      justify-content: center;
      align-items:center;
      cursor:pointer;
      position:relative;
      row-gap: 0.65rem;
      z-index: 100;
  
    }
  
    #lines span{
      width: 100%;
      height: 0.65rem;
      background: white;
      border-radius: 3px;
      transition: transform 0.75s ease-in-out;
    }
  
    #lines .line.active:nth-child(1){
      position:absolute;
      transform: rotate(135deg); 
      background: var(--color-main);
    }
    #lines .line.active:nth-child(2){
      position:absolute;
      transform: scale(0); 
      background: var(--color-main);
    }
    #lines .line.active:nth-child(3){
      position:absolute;
      transform: rotate(-135deg); 
      background: var(--color-main);
    }
  
    
  
    @media (width >= 768px) {
      #lines{
        display: none;
      }
      
    }
  </style>
  