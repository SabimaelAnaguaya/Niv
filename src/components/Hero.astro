  .hero-section .bg-sec{
    position: absolute;
    bottom: 0;
    content: "";
    width: 100%;
    height: 20%;
    background-color: var(--accent-color);
    clip-path: polygon(100% 0%, 0% 100%, 100% 100%);
    z-index: 1;
  }
  .hero-content{
    max-width: 80%;
    height: 95%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-info{
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 5rem;

    & h1{
      font-size: 2rem;
      font-family: var(--title-text);
      color:white;
      font-weight: bolder;
    }

    & p{
      font-size: 1.6rem;
      color: white;
    }
  }



/* Hero img grid */
  .hero-img-grid{
    flex: 1;
    width: 100%;
    height: 50dvh;
    display: grid;
    grid-template-columns: repeat(2, 1fr) ;
    gap: 15px;
    justify-content: center;
    align-items: center;
    grid-template-areas: 
      "A B"
      "A C"
      "D C";
  }
  .img-1{grid-area: A;box-shadow: 0px 0px 10px 3px #8080809d; overflow: hidden;}
  .img-2{grid-area: B;box-shadow: 0px 0px 10px 3px #8080809d; overflow: hidden;}
  .img-3{grid-area: C;box-shadow: 0px 0px 10px 3px #8080809d; overflow: hidden;}
  .img-4{grid-area: D;box-shadow: 0px 0px 10px 3px #8080809d; overflow: hidden;}

  .img-1, .img-3{
    border-radius: 40%;
  }

  .img-2{
    border-radius: 45%;
    border-top-right-radius: 0;
  }
  .img-4{
    border-radius: 45%;
    border-bottom-left-radius: 0;
  }

  img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }



  @media(min-width: 768px){
    .hero-img-grid{
      width: 40%;
      height: 80%;
    }

    .hero-content{
      flex-direction: row;
      height: 100%;
    }

    .hero-info{
      width: 60%;
      padding-right: 7%;

      & h1{
        font-size: 4rem;
      }

      & p{
        font-size: 2rem;
      }
    }
  }
